<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FuturisticButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/futuristic_button_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CuteButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cute_button_text</item>
        <item name="android:background">@drawable/cute_button_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

</resources>
